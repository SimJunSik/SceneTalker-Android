<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.yapp.scenetalker">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FeedPage"/>
        <activity android:name=".WritePage"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ChattingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PasswordChangeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PasswordResetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PasswordChangeEmailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PasswordFindActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyWrittenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyLikeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CommentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyBookmarkActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>