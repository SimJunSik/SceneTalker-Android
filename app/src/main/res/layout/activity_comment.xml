<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/finish"
            android:layout_marginTop="15dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/x"
            android:scaleType="centerCrop"
            android:background="#00ff0000"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/feedLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@id/finish"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/episode_result"
                    android:src="@drawable/userimage_potato" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:text="배가수지"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/feed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="56dp"
                    android:text="2분전"
                    android:textColor="@color/light_gray"
                    android:textSize="10dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/feed_post"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                />

            <ImageView
                android:id="@+id/feed_image"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageButton
                    android:id="@+id/feed_heart_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/heart_num"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="67dp"
                    android:text="23"
                    android:textSize="15dp" />


                <ImageButton
                    android:id="@+id/feed_comment_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="103dp"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="130dp"
                    android:text="23"
                    android:textSize="15dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="#d7d7d7"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylce"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/feedLayout"
            tools:layout_editor_absoluteX="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:id="@+id/edit_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center">
            <EditText
                android:id="@+id/commentEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#CCCCCC"
                android:background="@null"
                android:layout_weight="1"
                android:hint="댓글을 입력해주세요."
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentOk"
                android:background="#00000000"
                android:text="입력"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>