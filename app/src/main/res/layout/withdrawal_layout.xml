<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:background="@drawable/round_rec2"
        android="http://schemas.android.com/apk/res/android"
        android:layout_width="302dp"
        android:layout_height="370dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        card_view:cardCornerRadius="20dp"
        card_view:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="57dp"
                android:layout_height="82dp"
                android:layout_marginStart="127dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="127dp"
                android:layout_weight="0.8"
                android:src="@drawable/cider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:textColor="#161616"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:layout_marginTop="131dp"
                android:layout_marginEnd="77dp"
                android:textSize="16sp"
                android:text="정말 탈퇴하실 건가요?"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="16dp"
                android:text="모든 이용기록과 등록된 게시물은 삭제되며, 복구할 수 없습니다. 드라마에 대해 다른 사람들과 소통할 수 있는 좋은 기회 또한 사라집니다. 정말 탈퇴하시겠습니까?"
                android:textColor="#5f5f5f"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/withdrawal_dilaog_button_no"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="150dp"
                android:background="@drawable/bg_login_btn"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/withdrawal_dilaog_button_yes"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginStart="137dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_login_btn"
                android:text="탈퇴하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>